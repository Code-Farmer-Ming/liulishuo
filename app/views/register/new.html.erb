<h1>Register#new</h1>

<%= form_for @user, url: register_path(@user) do |f| %>
    <%= f.error_field %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>

    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>

    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

    </div>
    <%= f.submit %>
<% end %>