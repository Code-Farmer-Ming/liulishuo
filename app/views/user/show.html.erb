<h1>User#index</h1>


<table class="table">
  <thead>
  <tr>
    <th >用户</th>
    <th></th>
  </tr>
  </thead>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to_unless current_user.follow_users.exists?(user), 'follow', follow_path(id: user), method: :post %>
          <%= link_to_if current_user.follow_users.exists?(user), 'unfollow', unfollow_path(id: user), method: :post %>
        </td>
      </tr>
  <% end %>
</table>
<%= paginate @users %>